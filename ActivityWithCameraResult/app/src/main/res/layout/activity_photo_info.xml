<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.pluralsight.activitywithcameraresult.PhotoInfoActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select Course"
        android:id="@+id/course_label_textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/classSelectGroup"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android for .NET Devs: Getting Started"
            android:id="@+id/radio_getting_started"
            android:layout_below="@+id/course_label_textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="0dp"
            android:checked="false"
            android:layout_marginTop="@dimen/activity_vertical_margin" />

        <RadioButton
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:text="Android Programming with Intents"
            android:id="@+id/radio_intents"
            android:layout_below="@+id/radio_getting_started"
            android:layout_alignLeft="@+id/radio_getting_started"
            android:layout_alignStart="@+id/radio_getting_started"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Improving UI Interaction with Android ActionBar"
            android:id="@+id/radio_ui_interaction"
            android:checked="false" />

        <RadioButton
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:text="Android Async Programming and Services"
            android:id="@+id/radio_async_services"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android 4.0 New Features"
            android:id="@+id/radio_new_features"
            android:checked="false" />

    </RadioGroup>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Your Name"
        android:ems="10"
        android:id="@+id/your_name_editText"
        android:layout_below="@+id/classSelectGroup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email_editText"
        android:text="Your Email"
        android:layout_below="@+id/your_name_editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/done_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
